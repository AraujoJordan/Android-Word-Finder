<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/dialogWinLoseLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/descriptionWinOrGameOverLogo"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_win" />

    <TextView
        android:id="@+id/dialogWinloseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/titlefont"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/dialogYouWinTitle"
        android:textColor="@android:color/black"
        android:textSize="27sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dialogLeftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackgroundBorderless"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="40dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/dialogLeftButtonImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/uomopiccolo"
                android:padding="10dp"
                android:src="@drawable/ic_refresh_black_24dp"
                android:tint="@color/colorAccent" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dialogRightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackgroundBorderless"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="40dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/dialogRightButtonImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/uomopiccolo"
                android:padding="10dp"
                android:src="@drawable/ic_play_arrow_black_24dp"
                android:tint="@color/colorAccent" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</LinearLayout>